<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <a href="{{title}}" target="_blank">{{title}}</a>
        <span>({{blog_text}})</span>
      </div>
      <div class="meta">
        {{like_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/blogpost/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>